#include <mpi.h>
#include <stdio.h>


struct Noeud
{
	int X;
	int Y;
	int value;
};

int main(int argc, char** argv) {
	
	int my_rank;
	MPI_Status status;	
	MPI_Init(NULL, NULL);
	MPI_Comm_rank(MPI_COMM_WORLD, &my_rank);
	int nb_process;
	MPI_Comm_size(MPI_COMM_WORLD, &nb_process);
	int somme = 0;
	// Coordinateur
	if(my_rank==0){
		for(int i=0; i<nb_process; i++){
		MPI_Send(&somme, 1, MPI_INT, (my_rank+1)%nb_process,  99, MPI_COMM_WORLD);
		}
	}
	else{
		MPI_Recv(&somme, 1, MPI_INT, (my_rank-1)%nb_process, 99, MPI_COMM_WORLD, &status); 
		somme+=my_rank;
		if(my_rank!=0)
			MPI_Send(&somme, 1, MPI_INT, (my_rank+1)%nb_process,  99, MPI_COMM_WORLD);
	}
	printf("%d envoie la valeur %d Ã  %d\n", my_rank, somme, (my_rank+1)%nb_process);
	
	MPI_Finalize();
	return 0;
}
